{
  "compileOnSave": false,
  "compilerOptions": {
    "target":"es2022",
    "module": "es2022",
    "lib": ["es2022", "dom"],
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strictPropertyInitialization":true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
}
